<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_cardView"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    app:cardBackgroundColor="#5491cf"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_imageView"
            android:layout_width="match_parent"
            android:background="@drawable/fondolistview"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/id_textView_temperatura"
            android:layout_width="164dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:paddingLeft="40dp"
            android:paddingTop="7dp"
            android:text="Extensiones"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_textView_latitud"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="75dp"
            android:paddingTop="7dp"
            android:text="AnaVoIp"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/id_textView_humedad"
            android:layout_width="164dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textView_temperatura"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="7dp"
            android:textSize="15dp"
            android:text="Telefonos"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_textview_presionbar"
            android:layout_width="164dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textView_humedad"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="7dp"
            android:textSize="15dp"
            android:text="Sip Packets"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_textview_altitud"
            android:layout_width="164dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textview_presionbar"
            android:layout_marginLeft="10dp"
            android:paddingLeft="40dp"
            android:paddingTop="7dp"
            android:textSize="15dp"
            android:text="Rtp Packets"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_temperatura"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/id_textView_temperatura"
            android:layout_toEndOf="@+id/id_textView_temperatura"
            android:paddingTop="7dp"
            android:textSize="15dp"
            android:text="25"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_humedad"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textView_temperatura"
            android:layout_toEndOf="@+id/id_textView_temperatura"
            android:paddingTop="7dp"
            android:textSize="15dp"
            android:text="52%"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_presionbar"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:textSize="15dp"
            android:layout_below="@+id/id_textView_humedad"
            android:layout_toEndOf="@+id/id_textView_temperatura"
            android:paddingTop="7dp"
            android:text="123"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_altitud"
            android:layout_width="50dp"
            android:textSize="15dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textview_presionbar"
            android:layout_toEndOf="@+id/id_textView_temperatura"
            android:paddingTop="7dp"
            android:text="28 Mt"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="98dp"
            android:layout_height="42dp"
            android:textSize="15dp"
            android:layout_alignTop="@+id/id_textView_temperatura"
            android:layout_toEndOf="@+id/id_value_temperatura"
            android:paddingTop="7dp"
            android:text="Grados Celcius"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="98dp"
            android:textSize="15dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textView_temperatura"
            android:layout_toEndOf="@+id/id_value_temperatura"
            android:paddingTop="7dp"
            android:text="Porcentual"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="98dp"
            android:layout_height="42dp"
            android:textSize="15dp"
            android:layout_below="@+id/id_textview_presionbar"
            android:layout_toEndOf="@+id/id_value_temperatura"
            android:paddingTop="7dp"
            android:text="Mts Sobre Mar"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="98dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textView_humedad"
            android:layout_toEndOf="@+id/id_value_temperatura"
            android:paddingTop="7dp"
            android:text="HectorPascal"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_fecha"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_textView_latitud"
            android:layout_centerHorizontal="true"
            android:text="01/08/2018" />

    </RelativeLayout>


</android.support.v7.widget.CardView>

