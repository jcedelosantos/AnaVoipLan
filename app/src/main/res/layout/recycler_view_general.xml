<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_cardView"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#5491cf"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/fondopostview" />

        <TextView
            android:id="@+id/id_textView_temperatura"
            android:layout_width="179dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="171dp"
            android:paddingLeft="40dp"
            android:paddingTop="7dp"
            android:text="Temperatura"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_textView_latitud"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:paddingLeft="75dp"
            android:paddingTop="7dp"
            android:text="Proyecto Weather Station"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/id_textView_humedad"
            android:layout_width="164dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/id_textview_presionbar"
            android:layout_gravity="bottom"
            android:paddingLeft="40dp"
            android:paddingTop="7dp"
            android:text="Humedad"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_textview_presionbar"
            android:layout_width="164dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/id_textview_altitud"
            android:paddingLeft="40dp"
            android:paddingTop="7dp"
            android:text="PresionBar"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_textview_altitud"
            android:layout_width="164dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/id_textView_temperatura"
            android:paddingLeft="40dp"
            android:paddingTop="7dp"
            android:text="Altitud"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_temperatura"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/id_textView_temperatura"
            android:layout_toEndOf="@+id/id_textView_temperatura"
            android:paddingTop="7dp"
            android:text="25"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_altitud"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textView_temperatura"
            android:layout_toEndOf="@+id/id_textView_temperatura"
            android:paddingTop="7dp"
            android:text="52"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_humedad"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/id_textView_humedad"
            android:layout_toEndOf="@+id/id_textView_temperatura"
            android:paddingTop="7dp"
            android:text="25%"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_presion"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_above="@+id/id_textView_humedad"
            android:layout_toEndOf="@+id/id_textView_temperatura"
            android:paddingTop="7dp"
            android:text="23"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/id_textView_temperatura"
            android:layout_toEndOf="@+id/id_value_temperatura"
            android:paddingTop="7dp"
            android:text="Grados Celcius"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_below="@+id/id_textView_temperatura"
            android:layout_toEndOf="@+id/id_value_temperatura"
            android:paddingTop="7dp"
            android:text="Mts"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_above="@+id/id_textView_humedad"
            android:layout_toEndOf="@+id/id_value_temperatura"
            android:paddingTop="7dp"
            android:text="HPascal"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="130dp"
            android:layout_height="42dp"
            android:layout_alignTop="@+id/id_textView_humedad"
            android:layout_toEndOf="@+id/id_value_temperatura"
            android:paddingTop="7dp"
            android:text="Relativa"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_value_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="133dp"
            android:text="01/08/2018"
            android:textColor="@color/black"
            android:textSize="22dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
